@model Aplikacja_SQL.Models.TEST

@{
    ViewBag.Title = "PTEST_d";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="Title">Dodawanie Testu :)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">



    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    



    <div id="Bodycontener1">
        <div class="form-group">
            <div class="col-md-10" style="position:relative;left:210px;">
                @Html.EditorFor(model => model.NAZWA, new { htmlAttributes = new { @class = "form-control", placeholder = "Nazwa Testu" } })
                @Html.ValidationMessageFor(model => model.NAZWA, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10" style="position:relative;left:210px;">
                @Html.DropDownList("ID_BAZA", null, htmlAttributes: new { @class = "form-control", placeholder = "Wybierz Baze" })
                @Html.ValidationMessageFor(model => model.ID_BAZA, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div id="LineAddData" style="left:240px; height:120px; "> </div>

    <div id="Bodycontener2">

        <div class="form-group">
            <div class="col-md-10" style="position:relative;left:210px;">
                @Html.EditorFor(model => model.CZAS_START, new { htmlAttributes = new { @class = "form-control datetimepicker", placeholder = "Początek" } })
                @Html.ValidationMessageFor(model => model.CZAS_START, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" style="position:relative;left:210px;">
                @Html.EditorFor(model => model.CZAS_STOP, new { htmlAttributes = new { @class = "form-control datetimepicker", placeholder = "Koniec" } })
                @Html.ValidationMessageFor(model => model.CZAS_STOP, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group" style="clear:both;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj Test" style="background-color:#00f530; width:150px;position:relative; height:40px; " class="btn btn-default" />
        </div>
    </div>



</div>
    
}




