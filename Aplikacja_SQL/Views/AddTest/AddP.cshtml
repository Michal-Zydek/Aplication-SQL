@model List<Aplikacja_SQL.Models.PYTANIE>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Insert Bulk Data";

}

<h2 class="Title">Dodawaj Pytania:)</h2>
<hr />

<style>

    td {
        padding: 5px;
    }
</style>


@if(ViewBag.Details == 1)
        {
<div class="alert alert-danger" style="text-align:center; background-color:#FF0000; color:white; width:500px; left:210px; position:relative;">
    Błąd pytań !
</div>
        }
<div style="width:500px; padding:5px; background-color:white; left:210px; position:relative; border-radius:10px;">
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)




        <div class="col-md-offset-2 col-md-10" style=" position:relative; left:-100px;">
            <button class="btn" href="#" id="addNew" style="font-size:25px;  "><i class="icon-plus"></i>Dodaj</button>
        </div>


        <div class="col-md-offset-2 col-md-10" style="position:relative; left:240px; top:-60px">
            <input type="submit" value="Zapisz!" class="btn btn-default" style="background-color:#00f530; width:150px;position:relative; height:50px; font-size:25px;  " />
        </div>



        <table id="dataTable" class="table" border="0" cellpadding="0" cellspacing="0" style="">
            <tr>
                <th>Pytania :D</th>

            </tr>

            @if (Model != null && Model.Count > 0)
            {
                int j = 0;
                foreach (var i in Model)
                {
                    <tr>
                        <td>
                            @Html.TextBoxFor(a => a[j].PYTANIE1, new { style = "width:600px", placeholder = "Pytanie!" })


                        </td>
                    </tr>

                }
            }
        </table>



    }
    <div></div>


    <button class="btn" id="remove" style="font-size:15px; top:-5px; position:relative;  "><i class="icon-cancel"></i></button>
</div>




