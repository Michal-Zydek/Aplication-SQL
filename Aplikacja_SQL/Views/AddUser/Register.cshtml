@model Aplikacja_SQL.Models.UZYTKOWNIK
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2 class="Title">Zarejestruj się :D</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @if(ViewBag.Details == 1)
    {
    <div class="alert alert-success" style="text-align:center; background-color:#00f530; ">
    Rejestracja przebiegła pomyślnie
    </div>
    }

    <div id="Bodycontener1">



        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.IMIE, new { htmlAttributes = new { @class = "form-control", placeholder = "Imie" } })
                @Html.ValidationMessageFor(model => model.IMIE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NAZWISKO, new { htmlAttributes = new { @class = "form-control", placeholder = "Nazwisko" } })
                @Html.ValidationMessageFor(model => model.NAZWISKO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NR_INDEKSU, new { htmlAttributes = new { @class = "form-control", placeholder = "Numer Indexu" } })
                @Html.ValidationMessageFor(model => model.NR_INDEKSU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail" } })
                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div id="LineRegistration"></div>

    <div id="Bodycontener2">



        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.LOGIN, new { htmlAttributes = new { @class = "form-control", placeholder = "Login" } })
                @Html.ValidationMessageFor(model => model.LOGIN, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.HASLO, new { htmlAttributes = new { @class = "form-control", placeholder = "Hasło" } })
                @Html.ValidationMessageFor(model => model.HASLO, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>













    <div class="form-group" style="clear:both;">
        <div class="col-md-offset-2 col-md-10">
            <input style="background-color:#00f530; width:150px;position:relative; height:40px;" type="submit" value="Zarejestruj" class="btn btn-default" />
        </div>
    </div>
</div>
    
}

