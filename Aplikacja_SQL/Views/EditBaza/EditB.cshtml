@model Aplikacja_SQL.Models.BAZA_DANYCH

@{
    ViewBag.Title = "PBAZA_D";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="Title">Edytuj Baze :)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.ID_BAZA)
    @Html.HiddenFor(model => model.ID_UZYTKOWNIKA)

    @if (ViewBag.Details == 1)
    {
        <div class="alert alert-success" style="text-align:center; background-color:#00f530;">
            Pomyślnie połączono z bazą
        </div>
    }

    @if (ViewBag.Details == 2)
    {
        <div class="alert alert-danger" style="text-align:center; background-color:#FF0000; color:white;">
            Nie Połączono. Sprawdź Dane !!!
        </div>
    }



    <div id="Bodycontener1">

        <h4 style="color:white;position:relative; left:210px; top:10px;">Typ Bazy </h4>

        <div class="form-group" style="left:210px; color:white; top:25px; position:relative;">
            @Html.LabelFor(model => model.TYP, "POSTGRESQL:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="left:35px; ">
                @Html.RadioButtonFor(model => model.TYP, "POSTGRESQL")
            </div>
        </div>

        <div class="form-group" style="left:210px; color:white; position:relative;">
            @Html.LabelFor(model => model.TYP, "ORACLE:", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10" style="left:35px; ">
                @Html.RadioButtonFor(model => model.TYP, "ORACLE")
                @Html.ValidationMessageFor(model => model.TYP, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group" style="right:90px; position:relative; top:-30px;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NAZWA, new { htmlAttributes = new { @class = "form-control", placeholder = "Nazwa Bazy" } })
                @Html.ValidationMessageFor(model => model.NAZWA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="right:90px; position:relative; top:-30px;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.SCIEZKA, new { htmlAttributes = new { @class = "form-control", placeholder = "Server" } })
                @Html.ValidationMessageFor(model => model.SCIEZKA, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div id="LineAddData"></div>


    <div id="Bodycontener2">

        <div class="form-group" style="right:120px; position:relative; top:10px;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.LOGIN, new { htmlAttributes = new { @class = "form-control", placeholder = "Login" } })
                @Html.ValidationMessageFor(model => model.LOGIN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="right:120px; position:relative; top:10px;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.HASLO, new { htmlAttributes = new { @class = "form-control", placeholder = "Hasło" } })
                @Html.ValidationMessageFor(model => model.HASLO, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>


    <div class="form-group" style="clear:both;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="background-color:#00f530; width:150px;position:relative; height:40px; top:-30px;" value="Zapisz Baze" class="btn btn-default" />
        </div>
    </div>
</div>


}





