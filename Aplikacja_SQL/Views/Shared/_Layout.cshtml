<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/General.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Icon/css/fontello.css">
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

</head>
<body style="background-color: #DBFFFF;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="btn-group">
                    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        BAZY
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" @Html.ActionLink("UZYTKOWNIK", "Index", "UZYTKOWNIK", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                        <a class="dropdown-item" @Html.ActionLink("BAZA_DANYCH", "Index", "BAZA_DANYCH", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                        <a class="dropdown-item" @Html.ActionLink("TEST", "Index", "TEST", new { area = "" }, new { @class = "navbar-brand" })></a><br>
                        <a class="dropdown-item" @Html.ActionLink("PYTANIE", "Index", "PYTANIE", new { area = "" }, new { @class = "navbar-brand" })></a><br>
                        <a class="dropdown-item" @Html.ActionLink("ODPOWIEDZ", "Index", "ODPOWIEDZ", new { area = "" }, new { @class = "navbar-brand" })></a><br>
                    </div>
                </div>

                <div class="btn-group">
                    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        PROJEKT
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" @Html.ActionLink("REJESTRACJA", "Register", "AddUzytkownik", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                        <a class="dropdown-item" @Html.ActionLink("LOGOWANIE", "Logowanie", "Login", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                        <a class="dropdown-item" @Html.ActionLink("DODAJ BAZE", "PBAZA_D", "AddBaza", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                        <a class="dropdown-item" @Html.ActionLink("DODAJ TEST", "PTEST_D", "AddTest", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                        <a class="dropdown-item" @Html.ActionLink("SQL USER", "UserSQL_U", "UserSQL", new { area = "" }, new { @class = "navbar-brand" })></a> <br>
                    </div>
                </div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year Wszystkie prawa zastrzeżone.<br>
                Korzystanie z portalu oznacza akceptację Regulaminu
            </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    
    
    <script src="~/Scripts/CustomScript.js"></script>
</body>
</html>